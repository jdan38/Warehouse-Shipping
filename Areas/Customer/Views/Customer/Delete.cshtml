@model Warehouse.Models.Customer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info"> Delete Category</h2>
<br />

<form method="post" asp-action="Delete">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FName" class="control-label">First Name</label>
            </div>
            <div class="col-5">
                <input asp-for="FName" class="form-control" disabled/>
            </div>
            <span asp-validation-for="FName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LName" class="control-label">Last Name</label>
            </div>
            <div class="col-5">
                <input asp-for="LName" class="form-control" disabled/>
            </div>
            <span asp-validation-for="LName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Id" class="control-label">Id</label>
            </div>
            <div class="col-5">
                <input asp-for="Id" class="form-control" disabled/>
            </div>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DeleteAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>