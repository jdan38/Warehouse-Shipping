@model Warehouse.Models.Customer

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info"> Create Customer</h2>
<hr />



<form method="post" asp-action="Create">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="FName" class="control-label">First Name</label>
            </div>
            <div class="col-5">
                <input asp-for="FName" class="form-control" />
            </div>
            <span asp-validation-for="FName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LName" class="control-label">Last Name</label>
            </div>
            <div class="col-5">
                <input asp-for="LName" class="form-control" />
            </div>
            <span asp-validation-for="LName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Address" class="control-label">Address</label>
            </div>
            <div class="col-5">
                <input asp-for="Address" class="form-control" />
            </div>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="City" class="control-label">City</label>
            </div>
            <div class="col-5">
                <input asp-for="City" class="form-control" />
            </div>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="State" class="control-label">State</label>
            </div>
            <div class="col-5">
                <input asp-for="State" class="form-control" />
            </div>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Zip" class="control-label">Zipcode</label>
            </div>
            <div class="col-5">
                <input asp-for="Zip" class="form-control" />
            </div>
            <span asp-validation-for="Zip" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email" class="control-label">Email Address</label>
            </div>
            <div class="col-5">
                <input asp-for="Email" class="form-control" />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
 </form>
     



