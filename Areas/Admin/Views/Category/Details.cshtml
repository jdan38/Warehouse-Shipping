@model Warehouse.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Category Details</h2>
<hr />


<form method="post" asp-action="Details">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CatName" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="CatName" class="form-control" disabled/>
            </div>
            <span asp-validation-for="CatName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Id" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Id" class="form-control" disabled/>
            </div>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <partial name="_DetailsAndBackToListButton" model="Model.Id" />
                </div>
            </div>
        </div>
    </div>
</form>