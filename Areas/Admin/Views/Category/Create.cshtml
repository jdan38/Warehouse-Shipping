@model Warehouse.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info"> Create Category</h2>
<hr />



<form method="post" asp-action="Create">
     <div class="border backgroundWhite">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group row">
             <div class="col-2">
                 <label asp-for="CatName" class="control-label"></label>
             </div>
             <div class="col-5">            
                <input asp-for="CatName" class="form-control" />
             </div>
             <span asp-validation-for="CatName" class="text-danger"></span>
          </div>
            <div class="form-group row">
                <div class="col-5 offset-2">
                    <div class="row">
                         <div class="col-6">
                             <input type="submit" value="Create" class="btn btn-primary" />
                         </div>
                         <div class="col-6">
                             <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                          </div>
                    </div>
                </div>
         </div>
     </div>
 </form>
     



