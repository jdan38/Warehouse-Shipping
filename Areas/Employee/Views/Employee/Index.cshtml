@model IEnumerable<Warehouse.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Employee List</h2>
        </div>
        <div class="col-6 text-lg-right">
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <br />
    <div>
      
        @if (Model.Count() > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(m => m.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.EfName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.ElName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.EAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.ECity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.EState)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.EZip)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.EEmail)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EfName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ElName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ECity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EState)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EZip)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EEmail)
                            </td>
                            <td>
                                <partial name="_TableButtonPartial" model="item.Id" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Employee's exist....</p>
        }
    </div>
</div>
