@model IEnumerable<Warehouse.Models.Inventory>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <br /><br />
    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-info">Inventory List</h2>
            </div>
            <div class="col-6 text-lg-right">
                <partial name="_CreateButtonPartial" />
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">

                        <th>
                            @Html.DisplayNameFor(m => m.ItemName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IvenId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Qyt)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.Price)
                        </th>
                        <th></th>
                    </tr>


                    @foreach (var item in Model)
                    {
                <tr>

                    <td>
                        @Html.DisplayFor(m => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.IvenId)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Qyt)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Price)
                    </td>
                    <td>
                        <partial name="_TableButtonPartial" model="item.IvenId" />
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p>No category exists...</p>
            }
        </div>
    </div>
  
