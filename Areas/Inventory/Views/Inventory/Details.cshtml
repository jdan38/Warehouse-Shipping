@model Warehouse.Models.Inventory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Inventory Details</h2>
<hr />


<form method="post" asp-action="Details">
    <div class="border backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IvenId" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="IvenId" class="form-control" disabled />
            </div>
            <span asp-validation-for="IvenId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ItemName" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="ItemName" class="form-control" disabled />
            </div>
            <span asp-validation-for="ItemName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Qyt" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Qyt" class="form-control" disabled />
            </div>
            <span asp-validation-for="Qyt" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Price" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" class="form-control" disabled />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <partial name="_DetailsAndBackToListButton" model="Model.IvenId" />
                </div>
            </div>
        </div>
    </div>
</form>